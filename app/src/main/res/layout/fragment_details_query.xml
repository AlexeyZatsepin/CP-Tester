<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".fragments.QueryFragment">

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/help_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/secondary_text_dark"
        android:text="@string/sql_injection_info"
        android:textSize="20sp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="Try"/>

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/injection_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.dd.CircularProgressButton
        android:layout_marginTop="10dp"
        android:id="@+id/injection_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/cpb_white"
        android:textSize="18sp"
        app:cpb_cornerRadius="@dimen/corner_radius"
        app:cpb_iconComplete="@drawable/ic_action_done"
        app:cpb_iconError="@drawable/ic_action_error"
        app:cpb_textIdle="@string/details_query_button" />
</LinearLayout>
